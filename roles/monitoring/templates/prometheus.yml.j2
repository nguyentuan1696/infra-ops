global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'cadvisor'
    static_configs:
      - targets: ['{{ cadvisor_container_name }}:{{ cadvisor_port }}']

  - job_name: 'node-exporter'
    static_configs:
      - targets: ['{{ node_exporter_container_name }}:{{ node_exporter_port }}']

  - job_name: 'postgres-exporter'
    static_configs:
      - targets: ['{{ postgres_exporter_container_name }}:{{ postgres_exporter_port }}']
  
  - job_name: 'redis-exporter'
    static_configs:
      - targets: ['{{ redis_exporter_container_name }}:{{ redis_exporter_port }}']